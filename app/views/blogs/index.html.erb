<h1>Blog Posts</h1>
<head>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_pack_tag "application" %>
</head>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="4">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.text %></td>
      

        <td><%= link_to 'Show', blog_path(blog) %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog_path(blog), method: :delete, data: {} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Blog', new_blog_path %>
