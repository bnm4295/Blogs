<head>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_pack_tag "application" %>
</head>

<section class="splash-section">
  <div class="splash-inner-content">
    <div class="container">
      <div class="container page-container">
        <div class="splash-title">
          <p style="text-align: center; font-size: 50px;">Blog Posts</p>
          <p style="text-align: center; font-size: 25px;">David's Blogs</p>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="container" style="text-align: right">
    <h4><b><%= link_to 'New Blog', new_blog_path %></b></h4>
</div>

<div class="container">
  <% @blogs.each do |blog| %>
    <div class="row">
      <div class="col-md-4 text-center">
        <h3><%= blog.title %></h3>
        <div class ="panel panel-default">
            <div style="width: 100%; height:200px;">
              <%= image_tag(blog.photo) %>
            </div>
        </div>
      </div>
      <table>
        <tbody>
          <td><%= link_to 'Show', blog_path(blog) %> | </td>
          <td><%= link_to 'Edit', edit_blog_path(blog) %> | </td>
          <td><%= link_to 'Destroy', blog_path(blog), method: :delete, data: {} %></td>
        </tbody>
      </table>
    </div>
    <div style="height: 50px">
    </div>
  <% end %>
</div>
